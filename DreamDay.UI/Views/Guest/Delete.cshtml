@using DreamDay.Models.Entities
@model Guest

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Delete Guest";
}

<h1>@ViewData["Title"]</h1>
<h2>Are you sure you want to delete this guest?</h2>

<dl class="row">
    <dt class="col-sm-2">Full Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone Number</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>

    <dt class="col-sm-2">RSVP Status</dt>
    <dd class="col-sm-10">Model.RSVPStatus</dd>

    <dt class="col-sm-2">Number of additional Guests</dt>
    <dd class="col-sm-10">Model.PlusOne</dd>

    <dt class="col-sm-2">Table Assignment</dt>
    <dd class="col-sm-10">Model.TableAssignment</dd>

    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@(Model.Notes ?? "N/A")</dd>
</dl>

<form asp-action="Delete" asp-route-weddingId="@Model.WeddingId" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-weddingId="@Model.WeddingId" class="btn btn-secondary">Cancel</a>
</form>