@using DreamDay.Models.Entities
@model WeddingChecklistItem

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Wedding Checklist Item Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Task</dt>
        <dd class="col-sm-10">@Model.Task</dd>

        <dt class="col-sm-2">DueDate</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">IsCompleted</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Created At (UTC)</dt>
        <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-weddingId="@Model.WeddingId"  asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" asp-route-weddingId="@Model.WeddingId"  class="btn btn-secondary">Back to List</a>
</p>