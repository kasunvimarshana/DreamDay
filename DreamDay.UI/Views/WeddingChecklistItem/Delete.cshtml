@using DreamDay.Models.Entities
@model WeddingChecklistItem

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Delete Wedding Checklist Item";
}

<h1>@ViewData["Title"]</h1>
<h2>Are you sure you want to delete this wedding checklist item?</h2>

<dl class="row">
    <dt class="col-sm-2">Task</dt>
    <dd class="col-sm-10">@Model.Task</dd>

    <dt class="col-sm-2">DueDate</dt>
    <dd class="col-sm-10">@Model.DueDate?.ToShortDateString()</dd>

    <dt class="col-sm-2">IsCompleted</dt>
    <dd class="col-sm-10">@(Model.IsCompleted ? "Yes" : "No")</dd>
</dl>

<form asp-action="Delete" asp-route-weddingId="@Model.WeddingId" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-weddingId="@Model.WeddingId" class="btn btn-secondary">Cancel</a>
</form>

