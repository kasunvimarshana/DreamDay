@using DreamDay.Models.Entities
@using System.Globalization
@model IEnumerable<Vendor>

@{
    ViewData["Title"] = "Vendor List";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-controller="Vendor" asp-action="Create" class="btn btn-primary">Create New Venue</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>ContactEmail</th>
            <th>Category</th>
            <th>Created At (UTC)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.Name</td>
                <td>@vendor.ContactEmail</td>
                <td>@vendor.Category</td>
                <td>@vendor.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Edit" asp-route-id="@vendor.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@vendor.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>