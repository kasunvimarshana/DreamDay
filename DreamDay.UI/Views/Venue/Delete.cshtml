@using DreamDay.Models.Entities
@using System.Globalization
@model Venue

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Delete Venue";
}

<h1>@ViewData["Title"]</h1>
<h2>Are you sure you want to delete this venue?</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Capacity</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-LK"))</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>