@using DreamDay.Models.Entities
@using System.Globalization
@model BudgetItem

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Budget Item Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Item</dt>
        <dd class="col-sm-10">@Model.Item</dd>

        <dt class="col-sm-2">Estimated Cost</dt>
        <dd class="col-sm-10">@Model.EstimatedCost.ToString("C", CultureInfo.CreateSpecificCulture("en-LK"))</dd>

        <dt class="col-sm-2">Actual Cost</dt>
        <dd class="col-sm-10">@(Model.ActualCost?.ToString("C", CultureInfo.CreateSpecificCulture("en-LK")) ?? "N/A")</dd>

        <dt class="col-sm-2">Is Paid</dt>
        <dd class="col-sm-10">@(Model.IsPaid ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@(Model.PaymentDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@(Model.Notes ?? "N/A")</dd>

        <dt class="col-sm-2">Created At (UTC)</dt>
        <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-weddingId="@Model.WeddingId" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" asp-route-weddingId="@Model.WeddingId" class="btn btn-secondary">Back to List</a>
</p>