@using DreamDay.Models.ViewModels
@model BudgetItemViewModel

@{
    // var title = ViewContext.RouteData.Values["action"].ToString();
    ViewData["Title"] = "Edit Budget Item";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" asp-route-weddingId="@Model.WeddingId" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Item" class="form-label"></label>
        <input asp-for="Item" class="form-control" />
        <span asp-validation-for="Item" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EstimatedCost" class="form-label"></label>
        <input asp-for="EstimatedCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="EstimatedCost" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ActualCost" class="form-label"></label>
        <input asp-for="ActualCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ActualCost" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <label asp-for="IsPaid" class="form-label form-check-label"></label>
        <input asp-for="IsPaid" class="form-control form-check-input" type="checkbox" />
        <span asp-validation-for="IsPaid" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaymentDate" class="form-label"></label>
        <input asp-for="PaymentDate" class="form-control" type="date" />
        <span asp-validation-for="PaymentDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-weddingId="@Model.WeddingId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}