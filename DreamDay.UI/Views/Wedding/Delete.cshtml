@using DreamDay.Models.Entities
@model Wedding

@{
    ViewData["Title"] = "Delete Wedding";
}

<h1>@ViewData["Title"]</h1>
<h2>Are you sure you want to delete this wedding?</h2>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">WeddingDate</dt>
    <dd class="col-sm-10">@Model.WeddingDate?.ToShortDateString()</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.Name</dd>

    <dt class="col-sm-2">Owner</dt>
    <dd class="col-sm-10">@Model.Owner?.FullName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

