@using DreamDay.Models.Entities
@model Wedding

@{
    ViewData["Title"] = "Wedding Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">WeddingDate</dt>
        <dd class="col-sm-10">@Model.WeddingDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.Name</dd>

        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@Model.Owner?.FullName</dd>

        <dt class="col-sm-2">Created At (UTC)</dt>
        <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>