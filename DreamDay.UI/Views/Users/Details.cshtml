@using DreamDay.Models.Entities
@model User

@{
    ViewData["Title"] = "User Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Created At (UTC)</dt>
        <dd class="col-sm-10">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="~/@Url.Content(Model.ImagePath)" class="img-thumbnail" style="max-height:300px" />
            </dd>
        }
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
